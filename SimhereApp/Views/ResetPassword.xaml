<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:controls="clr-namespace:SimhereApp.Portable.Controls" x:Class="SimhereApp.Portable.Views.ResetPassword">
    <ContentPage.Content>
        <AbsoluteLayout>
            <StackLayout AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" Padding="20">
                <controls:FormLabelRequired Text="Mật khẩu mới" />
                <Entry x:Name="Pass" Placeholder="Mật khẩu mới" IsPassword="True" FontSize="16" />

                <controls:FormLabelRequired Text="Xác nhận mật khẩu" />
                <Entry  x:Name="ConfirmPass" Placeholder="Mật khẩu mới" IsPassword="True" FontSize="16" />

                <Button Text="Xác nhận" BackgroundColor="#0084ff" TextColor="White" Clicked="Confirm_Clicked" />
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
